#include <unistd.h>

unsigned int ft_strlcpy(char *dest, char *src, unsigned int size)
{
    unsigned int i;
    unsigned int n;
    
    n = 0;
    i = 0;
    while (src[n])
      n++;
    if (size == 0)
    return (n);
    
    while ( i < (size - 1) && str[i])
    {
        dest[i] = src[i];
        i ++;
       }
      dest[i] = '\0';
